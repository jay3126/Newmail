<h1>Listing notes</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Parent type</th>
    <th>Note</th>
    <th>User</th>
    <th>Client</th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%=h note.parent_id %></td>
    <td><%=h note.parent_type %></td>
    <td><%=h note.note %></td>
    <td><%=h note.user_id %></td>
    <td><%=h note.client_id %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_note_path %>