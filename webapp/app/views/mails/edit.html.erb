<h1>Editing mail</h1>

<% form_for(@mail) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :message_id %><br />
    <%= f.text_field :message_id %>
  </p>
  <p>
    <%= f.label :domain %><br />
    <%= f.text_field :domain %>
  </p>
  <p>
    <%= f.label :from_id %><br />
    <%= f.text_field :from_id %>
  </p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :in_reply_id %><br />
    <%= f.text_field :in_reply_id %>
  </p>
  <p>
    <%= f.label :user_agent_id %><br />
    <%= f.text_field :user_agent_id %>
  </p>
  <p>
    <%= f.label :content_type_id %><br />
    <%= f.text_field :content_type_id %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.label :priority_id %><br />
    <%= f.text_field :priority_id %>
  </p>
  <p>
    <%= f.label :client_id %><br />
    <%= f.text_field :client_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @mail %> |
