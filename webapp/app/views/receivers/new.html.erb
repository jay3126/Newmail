<h1>New receiver</h1>

<% form_for(@receiver) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :mail_id %><br />
    <%= f.text_field :mail_id %>
  </p>
  <p>
    <%= f.label :receiver_type_id %><br />
    <%= f.text_field :receiver_type_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', receivers_path %>